<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle`
		           and uncomment the following Encore helpers to start using Symfony UX #}
		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('css/app.css') }}">
			<link rel="stylesheet" href="https://bootswatch.com/4/flatly/bootstrap.min.css">

		{#{{ encore_entry_link_tags('app') }}#}
		{% endblock %}

		{% block javascripts %}
			{#{{ encore_entry_script_tags('app') }}#}
		{% endblock %}
	</head>
	<body>
		<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
			<div class="container-fluid">
				<a class="navbar-brand" href="#">French Connection</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbarColor01">
				<ul class="navbar-nav me-auto">
					<li class="nav-item">
						<a class="nav-link active" href="{{ path('admin_user_browse') }}">Utilisateurs</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="{{ path('admin_service_browse') }}">Services</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="{{ path('admin_hobby_browse') }}">Hobbies</a>
					</li>
				</ul>
				</div>
			</div>
		</nav>

		<div class="row">
			{% for type, messagesByType in app.flashes %}
				{% for message in messagesByType %}
					<div class="alert alert-dismissible alert-{{ type }}">
						{{ message }}
					</div>
				{% endfor %}
			{% endfor %}
		</div>
		{% block body %}{% endblock %}
		</div>
	</body>
</html>

