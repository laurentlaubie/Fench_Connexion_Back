<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle`
		           and uncomment the following Encore helpers to start using Symfony UX #}
		{% block stylesheets %}
			<link
			rel="stylesheet" href="https://bootswatch.com/4/flatly/bootstrap.min.css">
		{#{{ encore_entry_link_tags('app') }}#}
		{% endblock %}

		{% block javascripts %}
			{#{{ encore_entry_script_tags('app') }}#}
		{% endblock %}
	</head>
	<body>
		<div class="container">
			<div class="row">
				{% for type, messagesByType in app.flashes %}
					{% for message in messagesByType %}
						<div class="alert alert-dismissible alert-{{ type }}">
							{{ message }}
						</div>
					{% endfor %}
				{% endfor %}
			</div>
		{% block body %}{% endblock %}
		</div>
	</body>
</html>