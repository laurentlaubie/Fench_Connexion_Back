{% extends 'admin/base.html.twig' %}

{% block title %}Hello UserController admin!{% endblock %}

{% block body %}

<div class="example-wrapper">
    <h1>French Connection</h1>

    <h2>Back Office</h2>

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Email</th>
                <th scope="col">Pseudo</th>
                <th scope="col">Avatar</th>
                <th scope="col">Description</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.pseudo }}</td>
                <td>{{ user.avatar }}</td>
                <td>{{ user.shortDescription }}</td>
            </tr>

            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
